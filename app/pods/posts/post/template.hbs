<div class="f7">
  {{#link-to 'posts' class='link silver ttu dim'}}
    Blog posts
  {{/link-to}}
  <span class='moon-gray'>
    &nbsp;/&nbsp;
  </span>
</div>

<h1>{{model.title}}</h1>

<div class="flex mb3 items-center">
  <p class='mr1'>
    Tags:
  </p>

  <span class='mr2'>
    <a {{action (toggle 'isEditingTags' this)}}
      class='link silver br1 f7 dib flex items-center justify-center w2 h2 hover-near-black'
      href="#"
      data-modal-attach-id='tag-list'>
      {{fa-icon 'pencil'}}
    </a>
  </span>

  {{tag-list tags=model.tags}}
</div>

<div class='lh-copy'>
  {{{model.text}}}
</div>

<h2>
  Comments
  {{#if model.comments.length}}
    ({{model.comments.length}})
  {{/if}}
</h2>

<div class='lh-copy'>
  {{#if model.comments}}
    <ul>
      {{#each model.comments as |comment|}}
        <li>&middot; {{comment.text}} <em class='i'>â€“ {{comment.author}}</em></li>
      {{/each}}
    </ul>
  {{else}}
    <p>This post has no comments.</p>
  {{/if}}
</div>

{{#if isEditingTags}}
  {{posts/post/components/tag-dialog
    post=model
    onClose=(action (toggle 'isEditingTags' this))}}
{{/if}}
