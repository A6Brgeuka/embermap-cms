<h1>Blog posts</h1>

<div class='charts'>
  <div class="chart">
    {{responsive-bar-chart
      data=authorData
      color='blue'}}
    <h2>Author</h2>
  </div>
  <div class="chart">
    {{responsive-bar-chart
      data=categoryData
      color='green'}}
    <h2>Category</h2>
  </div>
  <div class="chart">
    {{responsive-bar-chart
      data=commentsData
      color='red'}}
    <h2>Comments</h2>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>
        <a href="" {{action 'sort' 'title'}}>Title</a>
      </th>
      <th>
        <a href="" {{action 'sort' 'author'}}>Author</a>
      </th>
      <th>
        <a href="" {{action 'sort' 'category'}}>Category</a>
      </th>
      <th>
        <a href="" {{action 'sort' 'commentCount'}}>Comments</a>
      </th>
      <th>
        <a href="" {{action 'sort' 'date'}}>Date</a>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedPosts as |post|}}
      <tr>
        <td>{{post.title}}</td>
        <td>{{post.author}}</td>
        <td>{{post.category}}</td>
        <td>{{post.commentCount}}</td>
        <td>{{moment-format post.date 'MMM D, YYYY'}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
